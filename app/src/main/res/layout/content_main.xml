<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/material_grey_300">
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/app_bar_main"
    tools:context=".MainActivity">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout_topbar"
        android:background="#878787">
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300px"
            android:text=""
            android:id="@+id/switch_ticketType" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120px"
            android:text="高纯"
            android:id="@+id/button" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10px"
        android:layout_below="@+id/linearLayout_topbar"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="出发地"
            android:id="@+id/text_src" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="500px"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="目的地"
            android:id="@+id/text_des" />
    </LinearLayout>

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10px"
    android:layout_below="@+id/linearLayout"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="41dp"
    android:id="@+id/linearLayout2"
        android:weightSum="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="北京"
        android:id="@+id/dym_src" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:id="@+id/img_change"
        android:layout_marginLeft="200px"
        android:src="@android:drawable/stat_notify_sync"
        android:layout_weight="0.08" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="上海"
        android:id="@+id/dym_des" />
</LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="30px"
        android:layout_centerHorizontal="true"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="1px"

            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:id="@+id/text_temp" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10px"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:id="@+id/linearLayout3"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="出发日期"
            android:id="@+id/text_date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200px"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1月1日 周五"
            android:id="@+id/cur_date" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/img_selectDate"
            android:layout_marginLeft="30px"
            android:src="@drawable/abc_ic_go_search_api_mtrl_alpha"
            android:layout_weight="0.14" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="30px"
        android:layout_centerHorizontal="true"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="1px"

            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:id="@+id/text_temp1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10px"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:id="@+id/linearLayout4"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="高铁/动车"
            android:id="@+id/text_train_type" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="400px"
            android:text=""
            android:id="@+id/switch_trainType" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout4"
        android:layout_marginTop="30px"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:id="@+id/linearLayout5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="1px"

            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:id="@+id/text_temp2" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout5">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:text="查  询"
            android:id="@+id/btn_look"
            android:background="#878787" />
    </LinearLayout>
</RelativeLayout>
