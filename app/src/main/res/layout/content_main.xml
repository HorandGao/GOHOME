<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0px"
    android:paddingRight="0px"
    android:paddingTop="0px"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/material_grey_300"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/app_bar_main"
    tools:context=".MainActivity">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout_topbar"

        android:background="#878787">
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text=""
            android:id="@+id/switch_ticketType" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高纯"
            android:id="@+id/button" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30px"
        android:layout_below="@+id/linearLayout_topbar"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="30px"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="出发地"
            android:id="@+id/text_src" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="30px"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="目的地"
            android:id="@+id/text_des" />
    </LinearLayout>

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30px"
    android:layout_below="@+id/linearLayout"
    android:layout_centerHorizontal="true"

    android:id="@+id/linearLayout2">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:layout_marginLeft="30px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="北京"
        android:id="@+id/dym_src" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_change"
        android:src="@android:drawable/stat_notify_sync"
        android:layout_weight="0.9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="上海"
        android:id="@+id/dym_des" />
</LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/linearLayout2"

        android:layout_marginBottom="30px"
        android:layout_centerHorizontal="true"
        android:background="#ffffff" android:id="@+id/line_1">

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30px"
        android:layout_below="@+id/line_1"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout3"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:layout_marginLeft="30px"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="出发日期"
            android:id="@+id/text_date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1月1日 周五"
            android:id="@+id/cur_date" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/img_selectDate"
            android:layout_marginRight="10px"
            android:src="@drawable/abc_ic_go_search_api_mtrl_alpha"
            android:layout_weight="0.14" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="30px"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:id="@+id/line_2">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30px"
        android:layout_below="@+id/line_2"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout4"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="30px"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="高铁/动车"
            android:id="@+id/text_train_type" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:text=""
            android:id="@+id/switch_trainType" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/linearLayout4"
        android:layout_centerHorizontal="true"
        android:background="#ffffff" android:id="@+id/line_3">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/line_3">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查  询"
            android:id="@+id/btn_look"
            android:background="#878787" />
    </LinearLayout>
</RelativeLayout>
