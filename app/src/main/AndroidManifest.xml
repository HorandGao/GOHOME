<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pw.horand.gohome" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".globalData"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".myOrder"
            android:label="@string/title_activity_my_order"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".myTrainList"
            android:label="@string/title_activity_my_train_list"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".waitPayMoney"
            android:label="@string/title_activity_wait_pay_money"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".myQueue"
            android:label="@string/title_activity_my_queue"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".myInformation"
            android:label="@string/title_activity_my_information"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".myOrderDetail"
            android:label="@string/title_activity_my_order_detail"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".myBooking"
            android:label="@string/title_activity_my_booking"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".resultSubmitOrder"
            android:label="@string/title_activity_result_submit_order"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
